# HydroCred Environment Configuration

# =============================================
# CRITICAL: Main Admin Configuration
# =============================================
# This is the root administrator address that will be hardcoded into the smart contract
# This address will have DEFAULT_ADMIN_ROLE and cannot be changed after deployment
MAIN_ADMIN_ADDRESS=0x1234567890123456789012345678901234567890
PRIVATE_KEY=0x1234567890123456789012345678901234567890123456789012345678901234

# =============================================
# Blockchain Configuration
# =============================================
# RPC URL for blockchain connection
RPC_URL=http://localhost:8545
# RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY
# RPC_URL=https://ethereum-sepolia.publicnode.com

# Smart contract address (will be set after deployment)
CONTRACT_ADDRESS=

# =============================================
# Database Configuration
# =============================================
# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/hydrocred
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/hydrocred

# =============================================
# Security Configuration
# =============================================
# JWT secret for authentication (change in production)
JWT_SECRET=hydrocred_jwt_secret_change_in_production_min_32_chars

# AES encryption key for sensitive data (32+ characters)
AES_KEY=hydrocred_encryption_key_32_chars_minimum_length

# =============================================
# Server Configuration
# =============================================
# Backend server port
PORT=5055

# Node environment
NODE_ENV=development

# =============================================
# File Upload Configuration
# =============================================
# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# Upload directory
UPLOADS_DIR=uploads

# =============================================
# Rate Limiting Configuration
# =============================================
# Rate limit window in milliseconds (15 minutes default)
RATE_LIMIT_WINDOW=900000

# Maximum requests per window
RATE_LIMIT_MAX=100

